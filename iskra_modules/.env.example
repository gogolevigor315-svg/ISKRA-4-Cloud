# ============================================
# DIALOG CORE v4.1 CONFIGURATION
# ============================================

# Базовый URL системы ISKRA-4
ISKRA_BASE_URL=https://iskra-4-cloud.onrender.com

# Уровень автономии: disabled, low, medium, high, full
DEFAULT_AUTONOMY_LEVEL=medium

# Каналы доставки: console, internal_log, telegram, system_bus
ENABLED_CHANNELS=console,internal_log

# Интервал опроса событий (секунды)
EVENT_POLL_INTERVAL=5.0

# Минимальный резонанс для автономной речи (0.0-1.0)
MIN_RESONANCE_FOR_SPEECH=0.3

# Лимиты сообщений
OPERATOR_HOURLY_LIMIT=100
USER_HOURLY_LIMIT=20
AUTONOMOUS_HOURLY_LIMIT=10

# Режимы интеграции (true/false)
USE_REAL_EVENT_BUS=true
USE_REAL_SEPHIROTIC=true
USE_REAL_SYMBIOSIS=true

# ============================================
# TELEGRAM CONFIGURATION (опционально)
# ============================================
# TELEGRAM_BOT_TOKEN=your_bot_token_here
# TELEGRAM_CHAT_IDS={"operator": "123456789"}

# ============================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ============================================
# DIALOG_LOG_LEVEL=INFO
# DIALOG_TEST_MODE=false
# TEST_AUTONOMY_INTERVAL=10.0
